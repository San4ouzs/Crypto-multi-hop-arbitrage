# Exchanges to scan (CCXT ids, comma-separated)
EXCHANGES=binance

# Start/end assets for cycles (comma-separated)
BASE_ASSETS=BTC,ETH,USDT,USDC

# Max cycle length (including return step). 3..6 is typical.
MAX_HOPS=5

# Minimum profit to report (in basis points). 10 bps = 0.10%
MIN_PROFIT_BPS=10

# Use best bid/ask from order book. If false, uses last/ticker price.
USE_ORDERBOOK=true

# Include taker fee deductions
INCLUDE_FEES=true

# Filter universe of symbols to top market-cap coins via CoinGecko
USE_TOP100=true
TOPN=100

# Optional Telegram alerts
TELEGRAM_TOKEN=
TELEGRAM_CHAT_ID=
